<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/thumbnail_view_detail"
                android:layout_width="432px"
                android:layout_height="733px"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/content" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="198dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/title_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="title_view" />

                <TextView
                    android:id="@+id/author_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="author_view" />

                <TextView
                    android:id="@+id/publisher_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="publisher_view" />

                <TextView
                    android:id="@+id/publish_date_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="publish_date_view" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/desc_view"
                android:layout_width="match_parent"
                android:layout_height="418dp"
                android:maxHeight="450dp"
                android:scrollbars="vertical"
                android:text="desc_view" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                    android:id="@+id/add_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Add to Library" />

                <Button
                    android:id="@+id/more_info_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="More Info" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>